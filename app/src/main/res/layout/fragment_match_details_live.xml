                    </TableLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardBackgroundColor="@color/card_background"
                app:layout_constraintTop_toBottomOf="@+id/cv_current_batsman_bowler">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_key_stats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/key_stats"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/divider_key_stats"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/app_background"
                        app:layout_constraintTop_toBottomOf="@+id/tv_key_stats" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_crr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="@string/crr"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider_key_stats" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_crr_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider_key_stats"
